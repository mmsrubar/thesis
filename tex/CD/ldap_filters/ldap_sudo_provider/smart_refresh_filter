LDAP filter:
---------------------------------------
(&(&(objectclass=sudoRole)
    (entryUSN>=9270)
    (!(entryUSN=9270))
  )
  (|(!(sudoHost=*))
    (sudoHost=ALL)
    (sudoHost=client1.example.cz)
    (sudoHost=client1)
    (sudoHost=192.168.0.2)
    (sudoHost=192.168.0.0/24)
    (sudoHost=fe80::a00:27ff:fe71:1191)
    (sudoHost=fe80::/64)
    (sudoHost=+*)
    (|(sudoHost=*\\\\*)
      (sudoHost=*?*)
      (sudoHost=*\\**)
      (sudoHost=*[*]*)
    )
  )
)
